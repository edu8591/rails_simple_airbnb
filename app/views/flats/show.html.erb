<div class="banner container-fluid"></div>

<div class="container">
  <div class="row show-contaier">
    <div class="col-8">
      <div class="row justify-content-around">
        <div class="col-10 bg-light rounded first-lvl a-shadow">
          <h2 class='pt-2'><%= @flat.name %></h2>
          <p><%= @flat.address %></p>
        </div>
        <div class="col-10 mt-3 bg-light rounded a-shadow">
          <h3>Alittle more about this flat...</h3>
          <p><%= @flat.description %></p>
        </div>
      </div>


    </div>

    <div class="col-4">
      <div class="row justify-content-start">
        <div class="col-8 bg-light rounded pt-2">
          <div class="row">
            <div class="col-12">
              <h2>Book this place</h2>
              <form action="#">
                <div class='border'>
                  <label for="start-date" class='col-3 ps-3 py-1 border-end'>From:</label>
                  <input type="date" class="col-8">
                </div>
                <div class="border">
                <label for="end-date" class="col-3 ps-3 py-1 border-end">To:</label>
                <input type="date" class='col-8'>
                </div>
                <div class="col-12 d-flex justify-content-center p-2">
                <input type="submit" class='btn btn-primary'>
                </div>

              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>