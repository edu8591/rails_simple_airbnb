<div class="row mt-3">
  <h1>All our Flats (<%= @flats.length %>)</h1>
</div>

<div class="row gy-3">

  <% @flats.each do |flat| %>
  <div class="col-4 ">
    <div class="col-12 border p-0 rounded card">
      <div class="px-2 pt-2 bg-light border-bottom">
        <h3><%= flat.name %></h3>
        <p><%= flat.address %></p>
        <p class='pb-2'><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %>      <i class="fas fa-dollar-sign"></i> <%= flat.price_per_night %></p>
      </div>
      <div class="px-3 py-2">
        <%= link_to 'More info', flat_path(flat) %>
      </div>
    </div>
  </div>
  <% end %>



</div>